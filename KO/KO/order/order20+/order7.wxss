/* KO/order/order20+/order7.wxss */

page{
    background-color: #f5f5f5;
}
.box{
    /* margin: 20rpx; */
    padding: 20rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.goods{
    background-color: #fff;
    width: 320rpx;
    margin-bottom: 30rpx;
}
.goods-img{
    width: 320rpx;
    height: 320rpx;
}
.goods-title{
    font-size: 28rpx;
    width: 300rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    padding: 0 20rpx;
}
.money{
    display: flex;
    padding: 0 20rpx;
    align-items: center;
    justify-content: space-between;
}
.money-icon{
    font-size: 20rpx;
    color: #e61010;
}
.money-nums{
    font-size: 34rpx;
    color: #e61010;
    margin-right: 10rpx;
}
.past-money{
    font-size: 20rpx;
    color: #808080;
}