/* KO/order/order20+/order9.wxss */
page{
    background: #f5f5f5;
}

.content{
    margin: 10rpx auto 30rpx;
    width: 700rpx;
    border-radius: 10rpx;
    background: #fff;
    padding: 20rpx;
    box-sizing: border-box;
}
.line1{
    font-size: 26rpx;
    border-bottom: 2rpx solid #f5f5f5;
    padding-bottom: 20rpx;
    display: flex;
    align-items: center;
}

.line1 .close{
    width: 32rpx;
    height: 32rpx;
}
.line1 .title{
    flex: 1;
    margin-left: 10rpx;
}
.order{
    position: relative;
    display: flex;
    align-items: center;
    border-bottom: 2rpx solid #f5f5f5;
    padding-bottom: 40rpx;
    padding-top: 20rpx;
}
.order .orderImg{
    width: 136rpx;
    height: 136rpx;
    border-radius: 8rpx;
    margin-left: 10rpx;
    margin-right: 20rpx;
}
.order .right{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.order .right .title{
    font-size: 28rpx;
}
.order .right .styles{
    font-size: 26rpx;
    color: #999;
    margin-top: 10rpx;
}
.order .right .price{
    font-size: 32rpx;
    color: #ffa92e;
    margin-top: 10rpx;
}
.order .right .price .logo{
    font-size: 20rpx;
    color: #ffa92e;
    margin-top: 10rpx;
}


.btn{
    position: absolute;
    right: 10rpx;
    bottom: 40rpx;
    width: 170rpx;
    height: 46rpx;
    display: flex;
    text-align: center;
    background: #fafafa;
    border-radius: 10rpx;
    border: 1rpx solid #e5e5e5;
}
.btn .j{
   width: 46rpx; 
    height: 46rpx;
    line-height: 46rpx;
    border-right: 1rpx solid #e5e5e5;
}
.btn .n{
    width: 80rpx;
    height: 46rpx;
    border-right: 1rpx solid #e5e5e5;
    line-height: 46rpx;
}
.btn .a{
   width: 46rpx; 
    height: 46rpx;
    line-height: 46rpx;
}