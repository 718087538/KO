/* KO/order/order9.wxss */
@import "/KO/app.wxss";
page{
    background: #fafafa;
}
.myOrder{
    background: #fff;
    margin: 30px 40rpx;
}
.myOrder .title{
    display: flex;
    padding:10rpx 30rpx;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #eee;
}
.orderName{
    font-size: 36rpx;
}
.orderAll{
    font-size: 20rpx;
    color: #b8b8b8;
}
.myOrder .title .orderName::before{
    content: '';
    width: 5rpx;
    height: 32rpx;
    display: inline-block;
    background: #4bb5ff;
    margin-right: 30rpx;
}
.myOrder .title .orderAll::after{
    content: '';
    width: 12rpx;
    height: 12rpx;
    display: inline-block;
    background: transparent;
    margin-left: 10rpx;
    border: 1rpx solid #eee;
    border-width: 2rpx 2rpx 0 0 ;
    transform: rotate(45deg);
}
.orderInfo{
    display: flex;
    padding: 36rpx;
    justify-content:flex-start;
    font-size: 20rpx;
    columns: #2b2b2b;
    text-align: center;
    flex-wrap: wrap;
}
.orderInfo .item{
    margin-right: 118rpx;
    margin-bottom: 65rpx;
}
.item image{
    margin-bottom: 26rpx;
}
.item:nth-child(4n+4){
    margin-right: 0;
}

.itemImg1{width: 53rpx;height: 52rpx;}
.itemImg2{width: 48rpx;height: 51rpx;}
.itemImg3{width: 59rpx;height: 44rpx;}
