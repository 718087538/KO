}
.box{
    margin: 20rpx;
    padding: 20rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    background-color: #fff;
}
.goods{
    width: 320rpx;
    margin-bottom: 30rpx;
}
