.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;
  width: 90%;
  margin: 0 auto;
  margin-right: 50rpx;
  margin-top: -10rpx;
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
  font-size:25rpx;
  color: #484848;
}  
/* 顶部导航字体颜色 */
.navbar .item.active{  
  color: #4b90f6;
}
.navbar .item.actives{  
  color: #4b90f6;
}
/* 顶部指示条属性 */
.navbar .item.active:after{  
  content: "";  
  display: block;  
  margin: 0 auto;
  width: 34rpx;
  height: 4rpx;  
  background: #4b90f6;
  border-radius: 2rpx;
}
