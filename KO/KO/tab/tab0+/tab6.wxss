/* KO/tab/tab0+/tab6.wxss */

.buyer-tab-btn{
  position: relative;
  width: 100%;
  text-align: center;
  height: 68rpx;
  background-color: #43bd56;
  display: flex;
  padding: 10rpx 200rpx 0;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #c3eeca;
  box-shadow: 0 6rpx 8rpx rgba(163,163,163,0.12);
  z-index: 10;
  justify-content: space-between;
}
.buyer-tab-btn view.on{
    color: #fff;
}
.buyer-tab-btn view.on::after{
  content: "";
    margin: 10rpx auto 0;
  display: block;
  width: 30rpx;
  height: 4rpx;
  background-color: #fff;
  border-radius: 2rpx;
}
