/* KO/tab/tab2.wxss */
.buyer-tab-btn{
  position: relative;
  width: 100%;
  height: 68rpx;
  background-color: #fff;
  display: flex;
  padding: 10rpx 35rpx 0;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #333;
  box-shadow: 0 6rpx 8rpx rgba(163,163,163,0.12);
  z-index: 10;
  justify-content: space-between;
}

.buyer-tab-btn view.on::after{
  content: "";
    margin: 10rpx auto 0;
  display: block;
  width: 72rpx;
  height: 4rpx;
  background-color: #4c8beb;
  border-radius: 2rpx;
}