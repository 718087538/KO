/* KO/list/list20+/list3.wxss */

.newsBox{
    border-bottom: 1rpx solid #f8f8f8;
    padding-bottom: 10rpx;
    position: relative;
}
.title{
    font-size: 30rpx;
    margin: 10rpx 10rpx;
}
.line2{
    display: flex;
    align-items: center;
    margin: 30rpx 40rpx;
}
.line2 .line2Img{
    width: 62rpx;
    border-radius: 50%;
    height: 62rpx;
}
.line2 .line2Name{
    font-size: 24rpx;
    margin-left: 10rpx
}
.textInfo{
    font-size: 18rpx;
    color: #808080;
    margin: 0 40rpx 0 40rpx;
}
.zan{
    font-size: 24rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 0 40rpx;
    margin-top: 30rpx;
}
.zan .pImg{
    width: 23rpx;
    height: 19rpx;
    margin-right: 6rpx;
}
.zan .zImg{
    margin-left: 50rpx;
    width: 22rpx;
    height: 22rpx;
    margin-right: 6rpx;
}