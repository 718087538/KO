/* KO/title/title5.wxss */
page{
    background-color: #f5f5f5;
}
.box{
    background-color: #fff;
    border-radius: 10rpx;
    margin: 20rpx;
    overflow: hidden;
}
.state{
    display: flex;
    align-items: center;
    margin: 0 auto;
    margin-top: 30rpx;
    width: 200rpx;
}
.state-img{
    width: 25rpx;
    height: 25rpx;
    margin-right: 10rpx;
}
.state-text{
    color: #ff759c;
    font-size: 26rpx;
}

.date-box{
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.date{
    display: flex;
    font-size: 24rpx;
    align-items: center;
    margin-top: 50rpx;
}
.date-img{
    width: 63rpx;
    height: 63rpx;
    margin-right: 30rpx;
}

.date-text{
    line-height: 32rpx;
}

.freshen{
    display: inline-block;
    padding: 10rpx 50rpx;
    font-size: 24rpx;
    color: #fff;
    background-color: #ff759c;
    border-radius: 30rpx;
    margin: 58rpx auto 30rpx 50%;
    transform: translateX(-50%);
}